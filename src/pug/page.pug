//- this is page template for all pages
//- Global instance for all pages
-
  var Global = {
    // generate random figure for widget
    random: function(fr, to) {
      return Math.floor(Math.random() * (to - fr)) + fr;
    },
    uid: function() {
      return Math.floor(new Date().valueOf() * Math.random());
    },
    currentStep: 0,
    isNewReservation: true,
    entryPageName: 'index.html'
  }

include language

block vars

doctype html
html(lang=currentLang)
  head
    meta(charset='utf-8')
    meta(http-equiv='cache-control, pragma', content='no-cache')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(name='description', content='')
    meta(name='format-detection' content='telephone=no')
    block pageTitle
    // datepicker
    link(rel='stylesheet' href='https://unpkg.com/bootstrap-datepicker@1.9.0/dist/css/bootstrap-datepicker3.min.css')
    // bootstrap
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css")
    // theme css
    link(rel="stylesheet", href="../../css/style.css")

    //- individual page style
    block pageStyle

  block pageBody
    body.loading
      main.container-fluid(mode='new')
        .row
          // section steps
          include steps
          // section form
          section#form.col-xs-12
            // step 1 - TnC
            include formStep1
            form.needs-validation(name='guestForm' novalidate)
              // step 2 - Guest and Contact input
              include formStep2
              // step 3 form
              include formStep3

      // bootstrap
      script(src='https://code.jquery.com/jquery-3.5.1.min.js')
      script(src='https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js')
      // datepicker
      script(src='https://unpkg.com/bootstrap-datepicker@1.9.0/dist/js/bootstrap-datepicker.min.js')
      // html5-qrcode for mobile
      // reference: https://github.com/mebjas/html5-qrcode
      script(src="https://cdnjs.cloudflare.com/ajax/libs/html5-qrcode/2.0.3/html5-qrcode.min.js")
      // global script
      script(src="../../js/mobile.js")
      script(src="../../js/index.js")

      //- individaul page js
      block pageJs