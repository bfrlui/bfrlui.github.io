{
  "name": "wwop",
  "version": "0.1.0",
  "private": false,
  "description": "Boilerplate for pug and sass web development",
  "main": "index.js",
  "scripts": {
    "test": "npm run build",
    "start": "npm run watch",
    "build": "npm-run-all build:*",
    "build:sass": "node-sass src/sass/style.scss -o public/css/ --source-map public/css/style.map",
    "build:pug": "pug src/page/ -P -o public/",
    "build:ugly": "npm run build:sass && uglifycss public/css/style.css > public/css/style.min.css",
    "watch": "npm-run-all --parallel watch:*",
    "watch:sass": "npm run build:sass -- -w",
    "watch:pug": "npm run build:pug -- -w",
    "watch:http-serve": "http-server public/"
  },
  "devDependencies": {
    "node-sass": "^6.0.1",
    "npm-run-all": "^4.1.3",
    "pug": "^3.0.0",
    "pug-cli": "^1.0.0-alpha6",
    "uglifycss": "0.0.29"
  }
}
