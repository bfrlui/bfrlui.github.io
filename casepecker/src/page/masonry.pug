extends ../pug/page

include ../pug/card

block vars

block pageTitle

block pageStyle
  title PWA - Masonry

block mainContent
  .row(data-masonry='{"percentPosition": true }')
    .col-sm-6.col-lg-4.mb-4
      //- .card
        svg.bd-placeholder-img.card-img-top(width='100%' height='200' xmlns='http://www.w3.org/2000/svg' role='img' aria-label='Placeholder: Image cap' preserveAspectRatio='xMidYMid slice' focusable='false')
          title Placeholder
          rect(width='100%' height='100%' fill='#868e96')
          text(x='50%' y='50%' fill='#dee2e6' dy='.3em') Image cap
        .card-body
          h5.card-title Card title that wraps to a new line
          p.card-text This is a longer card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.
      +card({design: 1, landscapeEnabled: false})
    .col-sm-6.col-lg-4.mb-4
      .card.p-3
        figure.p-3.mb-0
          blockquote.blockquote
            p A well-known quote, contained in a blockquote element.
          figcaption.blockquote-footer.mb-0.text-body-secondary
            | 
            Someone famous in 
            cite(title='Source Title') Source Title
    .col-sm-6.col-lg-4.mb-4
      .card
        svg.bd-placeholder-img.card-img-top(width='100%' height='200' xmlns='http://www.w3.org/2000/svg' role='img' aria-label='Placeholder: Image cap' preserveAspectRatio='xMidYMid slice' focusable='false')
          title Placeholder
          rect(width='100%' height='100%' fill='#868e96')
          text(x='50%' y='50%' fill='#dee2e6' dy='.3em') Image cap
        .card-body
          h5.card-title Card title
          p.card-text This card has supporting text below as a natural lead-in to additional content.
          p.card-text
            small.text-body-secondary Last updated 3 mins ago
    .col-sm-6.col-lg-4.mb-4
      .card.text-bg-primary.text-center.p-3
        figure.mb-0
          blockquote.blockquote
            p A well-known quote, contained in a blockquote element.
          figcaption.blockquote-footer.mb-0.text-white
            | 
            Someone famous in 
            cite(title='Source Title') Source Title
    .col-sm-6.col-lg-4.mb-4
      .card.text-center
        .card-body
          h5.card-title Card title
          p.card-text This card has a regular title and short paragraph of text below it.
          p.card-text
            small.text-body-secondary Last updated 3 mins ago
    .col-sm-6.col-lg-4.mb-4
      .card
        svg.bd-placeholder-img.card-img(width='100%' height='260' xmlns='http://www.w3.org/2000/svg' role='img' aria-label='Placeholder: Card image' preserveAspectRatio='xMidYMid slice' focusable='false')
          title Placeholder
          rect(width='100%' height='100%' fill='#868e96')
          text(x='50%' y='50%' fill='#dee2e6' dy='.3em') Card image
    .col-sm-6.col-lg-4.mb-4
      .card.p-3.text-end
        figure.mb-0
          blockquote.blockquote
            p A well-known quote, contained in a blockquote element.
          figcaption.blockquote-footer.mb-0.text-body-secondary
            | 
            Someone famous in 
            cite(title='Source Title') Source Title
    .col-sm-6.col-lg-4.mb-4
      .card
        .card-body
          h5.card-title Card title
          p.card-text This is another card with title and supporting text below. This card has some additional content to make it slightly taller overall.
          p.card-text
            small.text-body-secondary Last updated 3 mins ago

