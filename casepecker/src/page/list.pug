extends ../pug/page

//- include ../pug/carousel

block vars

block pageTitle

block pageStyle
  title Carousel

block mainContent
  h2 List
  .mt-3
  ul.list-group.list-group-flush

    - for (var i=0; i < 10; i++)
        a.py-3.list-group-item.list-group-item-action.d-flex.align-items-center.justify-content-between(href='#')
          include ../pug/user
          span.icon-home
  .mt-5
  h2 List - cards
  .mt-3
  ul.list-group.list-group-flush
    - for (var i=0; i < 10; i++)
        a.px-0.list-group-item.list-group-item-action.border-0(href='#')
          .card.card-landscape-view
            .card-media-wrapper
              img.card-img-top.rounded(src=Global.banner[Global.random(0, 3)] alt='...')
            .card-body.d-flex.flex-column.ps-0
              h6.text-uppercase.d-flex.justify-content-between.align-items-end
                span.text-primary card title
                small.text-muted 2023.6.1
              p.card-text.line-clamp(style='--line-clamp:2') Some quick example text to build on the card title and make up the bulk of the card's content.
              ul.d-flex.list-unstyled.text-muted.mt-auto
                li.me-3
                  span.icon-home.me-2
                  | 1k
                li
                  span.icon-home.me-2
                  | 2k

