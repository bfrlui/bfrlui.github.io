{
  "name": "pwa",
  "version": "0.1.0",
  "private": true,
  "description": "PWA",
  "main": "index.js",
  "scripts": {
    "test": "npm run build",
    "start": "npm run watch",
    "build": "npm-run-all build:*",
    "build:theme_blue": "node-sass src/scss/theme_blue.scss -o public/css/ --source-map true",
    "build:theme_cyan": "node-sass src/scss/theme_cyan.scss -o public/css/ --source-map true",
    "build:pug": "pug src/page/ -P -o public/",
    "watch": "npm-run-all --parallel build:theme* watch:*",
    "watch:theme_blue": "npm run build:theme_blue -- -w",
    "watch:theme_cyan": "npm run build:theme_cyan -- -w",
    "watch:pug": "npm run build:pug -- -w",
    "watch:http-serve": "http-server ."
  },
  "devDependencies": {
    "node-sass": "^9.0.0",
    "npm-run-all": "^4.1.3",
    "pug": "^3.0.0",
    "pug-cli": "^1.0.0-alpha6"
  }
}
