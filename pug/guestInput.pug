script#guest-input-template(type='text/template')
  .guest-input-group.d-none
    hr.my-4
    .col-xs-12.mb-3
      .d-flex.justify-content-between.align-items-center.mb-4
        h3.section-title.mb-0 #{dict.registered[currentLang]}
          span.text-primary.ml-1 #{dict.guest[currentLang]} _Index
        a(href='#')
          i.icon.trash.mr-2
          span.text-orange #{dict.remove[currentLang]}
      .position-relative
        label.input-label(for='guest_Index-name') #{dict.fullName[currentLang]}<span class="text-red">*</span>
        input.form-control.form-control-lg.rounded-pill.guest-text-input#guest_Index-name(name='guest_IndexName' type='text' value='')
      small#guest_Index-name-help-text.form-text.mt-3
        | #{dict.fullNameDesc[currentLang]}
      .valid-feedback Looks good!
    .col-xs-12.mb-3
      .position-relative
        label.input-label(for='guest_Index-ticket') #{dict.ticketBarcodeNumber[currentLang]}<span class="text-red">*</span>
        input.form-control.form-control-lg.rounded-pill.guest-text-input#guest_Index-ticket(name='guest_IndexTicket' type='text' value='')
        a(href)
          i.icon.question
      small.d-block.mt-3
        a.buy-ticket(href) #{dict.buyTickets[currentLang]}
      //- 
        small#guest_Index-ticket-help-text.form-text.text-muted.
          Your password must be 8-20 characters long
        .valid-feedback Looks good!

